
.container{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  z-index: 2;
}
.mark{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background-color: rgba(0,0,0, 0.2);
}

.section{
  position: absolute;
  z-index: 2;
  width: 500rpx;
  height:300rpx;
  background-color: #fff;
  border-radius: 12rpx;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  padding:15rpx;
}

.section-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:1rpx solid #ccc;
  padding-bottom:20rpx;
}
.title{
  text-align: center;
  font-size: 22px;
  margin-bottom: 40rpx;
}
.section__title{
  color:#aaa
}